{
  "manifest_version": 3,
  "name": "Secureum Race Extension",
  "version": "1.0",
  "description": "Extension to simulate Secureum Race tests",
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://ventral.digital/posts/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}